<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChronoFuck.Pages.FlyOutPageDemo.DemoFlyoutPage"
             Title="DemoFlyoutPage"
            FlyoutLayoutBehavior="Popover"
            >
    <FlyoutPage.Flyout>
        <ContentPage Title="My app" BackgroundColor="DarkGray">
            <VerticalStackLayout>
                <Label Text="This is Flyout page"
                       HorizontalTextAlignment="Center"
                       TextColor="White"
                       Margin="20"></Label>
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
        
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage BackgroundColor="AliceBlue">
                    <VerticalStackLayout>
                        <Label Text="This is Flyout page Detail"
                       HorizontalTextAlignment="Center"
                       Margin="20"></Label>
                    </VerticalStackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>